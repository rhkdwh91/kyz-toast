{
  "name": "kyz-toast",
  "version": "0.2.1",
  "description": "Animated toast message component for React",
  "keywords": [
    "react",
    "notification",
    "toast",
    "react-component",
    "react-toastify",
    "push",
    "alert"
  ],
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "files": [
    "build/dist"
  ],
  "exports": {
    ".": {
      "import": "./src/index.tsx"
    }
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "sideEffects": true,
  "size-limit": [
    {
      "path": "dist/react-toast.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-toast.esm.js",
      "limit": "10 KB"
    }
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhkdwh91/kyz-toast.git"
  },
  "bugs": {
    "url": "https://github.com/rhkdwh91/kyz-toast/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.2",
    "husky": "^9.0.11",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.2",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^5.0.7",
    "postcss": "^8.4.40",
    "postcss-url": "^10.1.3",
    "rollup-plugin-svg": "^2.0.0"
  }
}
