{
  "name": "kyz-toast",
  "version": "0.0.1",
  "description": "Animated toast message component for React",
  "keywords": [
    "react",
    "notification",
    "toast",
    "react-component",
    "react-toastify",
    "push",
    "alert"
  ],
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/kyz-toast.esm.js",
  "scripts": {
    "dev": "tsdx watch",
    "start": "cd playground && yarn start",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/react-toast.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-toast.esm.js",
      "limit": "10 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhkdwh91/kyz-toast.git"
  },
  "bugs": {
    "url": "https://github.com/rhkdwh91/kyz-toast/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "cssimport": "^0.1.22",
    "husky": "^9.0.11",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^3.9.10"
  }
}
